# Git configuration for CRM project
[core]
    ignorecase = true

# Files to ignore
*.dll
*.exe
*.pdb

# Build output directories (in project subdirectories)
**/bin/
**/obj/

# Keep root bin/ and builds/ directories structure
!/bin/
!/bin/README.md
!/bin/*/.gitkeep
bin/**/*.tar.gz
bin/**/*.zip
bin/**/api/
bin/**/frontend/

!/builds/
!/builds/README.md
!/builds/*/.gitkeep
builds/**/backend/
builds/**/frontend/
builds/**/release/

.vs/
.vscode/
node_modules/
dist/
build/
*.log
*.user
*.suo
.DS_Store
.env
.env.local
.env.production
.env.*.local
appsettings.*.json
!appsettings.json
.docker-remote-config.json

# Large binary files - use Git LFS or exclude
artifacts/**/*.tar.gz
artifacts/**/api/CRM.Api
artifacts/**/*.so
database/master_data/002_geonames_zipcodes.sql
database/master_data/allCountries.txt
database/master_data/allCountries.zip
*.tar.gz

