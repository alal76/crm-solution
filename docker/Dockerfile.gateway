# CRM API Gateway Dockerfile
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 5000

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files for restore
COPY ["CRM.Backend/src/Services/CRM.Gateway/CRM.Gateway.csproj", "Services/CRM.Gateway/"]
RUN dotnet restore "Services/CRM.Gateway/CRM.Gateway.csproj"

# Copy source files
COPY CRM.Backend/src/Services/CRM.Gateway/. Services/CRM.Gateway/

WORKDIR "/src/Services/CRM.Gateway"
RUN dotnet build "CRM.Gateway.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "CRM.Gateway.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENV ASPNETCORE_URLS=http://+:5000
ENTRYPOINT ["dotnet", "CRM.Gateway.dll"]
