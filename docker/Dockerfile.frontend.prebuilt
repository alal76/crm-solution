# Simple production stage - uses pre-built React app
FROM node:18-alpine

WORKDIR /app

# Install serve to run the built app and curl for healthcheck
RUN npm install -g serve && apk add --no-cache curl

# Copy pre-built app directly
COPY CRM.Frontend/build ./build

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:80/ || exit 1

# Expose the port
EXPOSE 80

# Start the server
CMD ["serve", "-s", "build", "-l", "80"]
